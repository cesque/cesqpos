{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "ES2022",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,

        "strict": true,
        "noUncheckedIndexedAccess": true,

        "module": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
        "verbatimModuleSyntax": true,

        "declaration": true,
        "lib": ["ES2022"],

    },
    "exclude": [
        "./dist/**/*",
    ]
}